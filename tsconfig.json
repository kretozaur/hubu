{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom", "esnext"],
  },
  "exclude": [ "node_modules"],
  "types": [ "typePatches" ]
}